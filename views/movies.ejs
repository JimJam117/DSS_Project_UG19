<%- include('partials/header') %>


    <!-- Movies Section -->
    <div class="section">
        <h1>Movies:</h1>
 
        <% movies.forEach(function(movie){ %>
            <a href="/movie/<%= movie.id %>" class="list_item">
                <div class="list_item_image">
                    <img src="/<%= movie.image_url %>" alt="poster">
                </div>
                <div class="list_item_details">
                    <h2><%= movie.title %></h2>
                    <p><%= movie.movie_cast %>, directed by <%= movie.director %></p>
                </div>
                
            </a>
            <% }); %>
 
    </div>

   

<%- include('partials/footer') %>